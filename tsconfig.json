    "baseUrl": "./src",
    "paths": {
      "*": [
        "src/*"
      ],
      "@screens/*": [
        "screens/*"
      ],
      "@theme/*": [
        "theme/*"
      ],
      "@common/*": [
        "common/*"
      ],
    }
  },
  "exclude": [
    "babel.config.js",
    "node_modules"
  ],
}